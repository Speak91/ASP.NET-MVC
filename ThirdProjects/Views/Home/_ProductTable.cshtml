@model ThirdProjects.Models.Product
<style type="text/css">
    TABLE {
        width: 300px; /* Ширина таблицы */
        border-collapse: collapse; /* Убираем двойные линии между ячейками */
    }

    TD, TH {
        padding: 3px; /* Поля вокруг содержимого таблицы */
        border: 1px solid black; /* Параметры рамки */
    }

    TH {
        background: #b0e0e6; /* Цвет фона */
    }
</style>
<table>
    <tr>
        <th>Номер</th>
        <th>Наименование</th>
        <th>Цена</th>
        <th>Дата создания</th>
    </tr>
    <tr><td>@Model.Id</td><td>@Model.Name</td><td>@Model.Price</td><td>@Model.CreateTime.ToShortDateString()</td></tr>
</table>
